[
    // new file
    {
        "key": "a",
        "command": "explorer.newFile",
        "when": "filesExplorerFocus && !inputFocus"
    },
    // delete file
    {
        "key": "d",
        "command": "deleteFile",
        "when": "filesExplorerFocus && !inputFocus"
    },
    // rename file
    {
        "key": "r",
        "command": "renameFile",
        "when": "filesExplorerFocus && !inputFocus"
    },
    // new folder
    {
        "key": "f",
        "command": "explorer.newFolder",
        "when": "filesExplorerFocus && !inputFocus"
    },
    // copilot chat inline
    {
        "key": "alt+i",
        "command": "inlineChat.start",
        "when": "inlineChatHasProvider && !editorReadonly"
    },
]