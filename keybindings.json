// Place your key bindings in this file to override the defaultsauto[]
[
    // new file
    {
        "key": "a",
        "command": "explorer.newFile",
        "when": "filesExplorerFocus && !inputFocus"
    },
    // delete file
    {
        "key": "d",
        "command": "deleteFile",
        "when": "filesExplorerFocus && !inputFocus"
    },
    // rename file
    {
        "key": "r",
        "command": "renameFile",
        "when": "filesExplorerFocus && !inputFocus"
    },
    // new folder
    {
        "key": "f",
        "command": "explorer.newFolder",
        "when": "filesExplorerFocus && !inputFocus"
    },
    // copilot chat inline
    {
        "key": "alt+i",
        "command": "inlineChat.start",
        "when": "inlineChatHasProvider && !editorReadonly"
    },
    // run test at cursor
    {
        "key": "ctrl+r",
        "command": "testing.runAtCursor",
        "when": "editorTextFocus"
    },
    // run all tests in package
    {
        "key": "ctrl+shift+r",
        "command": "testing.runCurrentFile",
        "when": "editorTextFocus"
    },
    // open file and side bar visibilty when side bar focus and marked file
    {
        "key": "l",
        "command": "extension.multiCommand.execute",
        "args": {
            "command": "multiCommand.openAndToggleSidebar"
        },
        "when": "sideBarFocus && !inputFocus && !explorerResourceIsFolder"
    },
    // close file explorer when focus on file explorer
    {
        "key": "q",
        "command": "workbench.action.closeSidebar",
        "when": "filesExplorerFocus && !inputFocus"
    },
]
